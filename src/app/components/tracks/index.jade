for track in tracks
    li(data-track=track.id).track.showing: figure
        img(src=track.getImage()).track-image
        figcaption
            button.track-play
            .track-details
                a(href=track.getUrl('user')).track-details-user= track.getUsername()
                a(href=track.getUrl()).track-details-title= track.getTitle()
            .track-waveform
            .track-duration= track.getDuration('mm:ss')
        .track-links
            if track.isDownloadable()
                a(
                    href=track.getDownloadUrl()
                    data-link='download'
                    title='Download track'
                ) ⬇
            a(
                href='#'
                data-link='delete'
                title='Remove track from queue'
            ) ×
