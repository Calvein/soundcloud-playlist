.track
    position relative
    display block
    margin 10px 0
    &.active
        font-style italic

    img
    figcaption
        display inline-block
        vertical-align top

    img
        width 100px
        height @width
        margin-right 4px
        border 1px solid #ccc
        border-radius 4px
        box-shadow 0 0 4px rgba(black, .2)

    // .track-play
    &-play
    // .track-details
    &-details
        display inline-block
        vertical-align top

    // .track-play
    &-play
        width  40px
        height 40px
        border-radius 50%
        margin-right 10px
        font-size 24px
        cursor pointer
        &:before
            content '>'
        &.playing:before
            content '||'

    // .track-details
    &-details
        // .track-details-user
        &-user
            display block
            color #999
            font-size 14px

        // .track-details-title
        &-title
            font-weight bold
            color text-color

        a
            text-decoration none
            &:hover
                text-decoration underline

    // .track-links
    &-links
        position absolute
        top 0
        right 0

        a
            color text-color
            text-decoration none
            font-size 24px